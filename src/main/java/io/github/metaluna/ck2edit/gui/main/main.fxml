<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.input.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.metaluna.ck2edit.gui.main.MainPresenter">
   <top>
      <MenuBar BorderPane.alignment="TOP_LEFT">
        <menus>
          <Menu text="%menuFile">
            <items>
                  <MenuItem onAction="#onOpenFile" text="%menuOpenMod">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <SeparatorMenuItem/>
                  <MenuItem onAction="#onSaveFile" text="%menuSaveFile">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem onAction="#onSaveAllFiles"  text="%menuSaveAll">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <SeparatorMenuItem/>
              <MenuItem text="%menuQuit" />
            </items>
          </Menu>
          <Menu text="%menuEdit">
            <items>
              <MenuItem disable="true" text="%menuDelete" />
            </items>
          </Menu>
          <Menu text="%menuHelp">
            <items>
              <MenuItem disable="true" text="%menuAbout" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
